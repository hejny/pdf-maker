{
    "name": "pdf-maker",
    "version": "1.3.2",
    "private": false,
    "main": "./dist/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/hejny/pdf-maker"
    },
    "author": "Pavol Hejn√Ω <me@pavolhejny.com> (https://www.pavolhejny.com/)",
    "license": "ISC",
    "scripts": {
        "start": "npm run develop",
        "develop": "run-s functions-framework --target=pdfmaker",
        "prettier": "prettier --config .prettierrc --write \"{src,public}/**/*.{ts,tsx,js,css}\" webpack.config.js",
        "prettier-watch": "onchange \"**/*.{js,ts,tsx,json,css}\" -- prettier --config .prettierrc --write \"{{changed}}\"",
        "TODO: test": "jest --runInBand --detectOpenHandles --forceExit --setupFiles dotenv/config",
        "build": "tsc",
        "deploy": "gcloud functions deploy pdfmaker --trigger-http --runtime nodejs12 --region=europe-west3 --memory=1024mb",
        "logs": "gcloud functions logs read pdfmaker",
        "preversion": "npm test",
        "postversion": "git push && git push --tags && npm run deploy"
    },
    "dependencies": {
        "aws-sdk": "^2.762.0",
        "body-parse": "^0.1.0",
        "configchecker": "^1.0.6",
        "cors": "^2.8.4",
        "dotenv": "^6.1.0",
        "express": "^4.17.1",
        "glob-promise": "^3.4.0",
        "isomorphic-fetch": "^2.2.1",
        "node-ssh": "^7.0.0",
        "promise-sftp": "^0.11.3",
        "puppeteer": "^2.1.1",
        "uuid": "^3.4.0",
        "waitasecond": "^1.0.0"
    },
    "devDependencies": {
        "@google-cloud/functions-framework": "^1.7.1",
        "@types/body-parser": "^1.17.1",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.2",
        "@types/jest": "^25.1.1",
        "@types/node": "^10.17.14",
        "@types/puppeteer": "^2.0.0",
        "@types/supertest": "^2.0.8",
        "@types/uuid": "^3.4.7",
        "onchange": "^5.2.0",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-node": "^7.0.1",
        "typescript": "^3.7.5"
    }
}
